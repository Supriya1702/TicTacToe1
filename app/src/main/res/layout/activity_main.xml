        <Button
            android:layout_margin="10dp"
            android:onClick="restartClick"
            android:text="Restart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/restartBtn"/>

    </LinearLayout>



</LinearLayout>